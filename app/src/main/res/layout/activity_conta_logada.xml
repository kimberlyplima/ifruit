<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LojaVirtualActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="410dp"
        android:layout_height="662dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="69dp"></android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imageButtonHome"
        android:layout_width="139dp"
        android:layout_height="69dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/imageButtonCarrinho"
        android:layout_width="141dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="-2dp"
        android:layout_toStartOf="@+id/imageButtonPerfil"
        android:layout_toEndOf="@+id/imageButtonHome"
        android:scaleType="fitCenter"
        android:src="@drawable/carrinho" />

    <ImageButton
        android:id="@+id/imageButtonPerfil"
        android:layout_width="128dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/perfil" />


</RelativeLayout>