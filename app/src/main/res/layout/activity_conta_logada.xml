<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LojaVirtualActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="410dp"
        android:layout_height="600dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="69dp"></android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/imageButtonBuscar"
        android:layout_width="73dp"
        android:layout_height="62dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="-1dp"
        android:scaleType="fitCenter"
        android:src="@drawable/buscar" />

    <ImageButton
        android:id="@+id/imageButtonHome"
        android:layout_width="102dp"
        android:layout_height="67dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home" />

    <ImageButton
        android:id="@+id/imageButtonCarrinho"
        android:layout_width="102dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/imageButtonHome"
        android:scaleType="fitCenter"
        android:src="@drawable/carrinho" />

    <ImageButton
        android:id="@+id/imageButtonFavorito"
        android:layout_width="102dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="1dp"
        android:layout_toEndOf="@+id/imageButtonCarrinho"
        android:scaleType="fitCenter"
        android:src="@drawable/favorito" />

    <ImageButton
        android:id="@+id/imageButtonPerfil"
        android:layout_width="102dp"
        android:layout_height="67dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-2dp"
        android:scaleType="fitCenter"
        android:src="@drawable/perfil" />

    <Button
        android:id="@+id/button5"
        android:layout_width="73dp"
        android:layout_height="62dp"
        android:text="Button" />


</RelativeLayout>