<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CarrinhoDeComprasActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="410dp"
        android:layout_height="553dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="69dp"></android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="359dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@color/colorButton"
        android:text="Finalizar"
        android:textColor="@color/colorText"
        app:layout_constraintBottom_toTopOf="@+id/imageButtonCarrinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonHome"
        android:layout_width="139dp"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="-6dp" />

    <ImageButton
        android:id="@+id/imageButtonCarrinho"
        android:layout_width="132dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toStartOf="@+id/imageButtonPerfil"
        android:layout_toEndOf="@+id/imageButtonHome"
        android:scaleType="fitCenter"
        android:src="@drawable/carrinho"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonPerfil"
        app:layout_constraintStart_toEndOf="@+id/imageButtonHome" />

    <ImageButton
        android:id="@+id/imageButtonPerfil"
        android:layout_width="146dp"
        android:layout_height="70dp"
        android:layout_alignBottom="@+id/imageButtonHome"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/perfil"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>